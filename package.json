{
  "name": "nova-erp",
  "version": "0.0.1",
  "description": "Open-source ERP engine built from first principles, where AI agents are first-class participants.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:int": "vitest run --config vitest.integration.config.ts",
    "test:load": "pnpm -r test:load",
    "test:stress": "vitest run --config vitest.stress.config.ts",
    "demo": "tsx scripts/demo.ts",
    "demo:setup": "tsx scripts/demo-setup.ts",
    "seed": "tsx scripts/seed.ts",
    "dev": "pnpm --filter @nova/api dev",
    "dashboard": "pnpm --filter @nova/dashboard dev",
    "lint": "eslint packages/ --ext .ts",
    "format": "prettier --write 'packages/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "eslint": "^8.56.0",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "prettier": "^3.2.0",
    "testcontainers": "^10.6.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "ulid": "^2.4.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "erp",
    "event-sourcing",
    "cqrs",
    "ai-agents",
    "enterprise",
    "accounting",
    "open-source"
  ],
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/[org]/nova.git"
  },
  "dependencies": {
    "ajv": "^8.18.0",
    "js-yaml": "^4.1.1"
  }
}
